{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "bvp/stadium",
    "description": "The BVP Stadium package for Boatrace.",
    "keywords": [
        "boatrace",
        "japan",
        "japanese",
        "library",
        "stadium"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "shimomo",
            "email": "bvp@shimomo.net"
        }
    ],
    "support": {
        "issues": "https://github.com/shimomo/bvp-stadium/issues",
        "source": "https://github.com/shimomo/bvp-stadium"
    },
    "require": {
        "php": "^8.2",
        "shimomo/helper": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1 || ^11.1 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "BVP\\Stadium\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BVP\\Stadium\\Tests\\": "tests/"
        }
    }
}
